
<div class="row">
  <div class="page-header">
    <h1><%= @story.title %></h1>
    <%= link_to 'Delete story', story_path(@story), class: "nav-link",
              data: {:confirm => 'Are you sure you want to delete "' + @story.title + '"?'}, :method => :delete %>
  </div>
  <!-- <%= link_to "Add a sentence", new_story_sentence_path(@story) %> -->
  <div class="col-md-5">
    <%= render 'sentences/form' %>
    <br>
    <%= link_to "Return to Story List", stories_path, class: "nav-link" %>
  </div>
  <div class="col-md-6 col-md-offset-1">
  <% if @story.sentences.any? %>
    <div class="container">
      <% @story.sentences.each do |sentence| %>

          <p><%= image_tag (sentence.image_id.to_s + ".png") %></p>
          <p><%= sentence.content %></p>
          <small><%= sentence.author %></small>

      <% end %>
    </div>
  <% else %>
    <h3>This story has no content. Please add the first sentence.</h3>
  <% end %>
  </div>
  <hr>
</div>
